@inherits MudComponentBase
@typeparam T

<MudToolBar @attributes="UserAttributes" Class="@Classname" Style="@Style">
    <div class="mud-table-pagination-spacer"></div>
    @if (!DisableRowsPerPage)
    {
        <MudText Typo="Typo.body2" Class="mud-table-pagination-caption">
            @RowsPerPageString
        </MudText>
        @if(DataGrid is not null)
        {
            <MudSelect T="int" ValueChanged="@SetRowsPerPageAsync" Value="@DataGrid.RowsPerPage" Class="mud-table-pagination-select" DisableUnderLine="true" Dense="true" Disabled="@Disabled">
                @foreach (int pageSize in PageSizeOptions)
                {
                    <MudSelectItem T="int" Value="@pageSize">@pageSize</MudSelectItem>
                }
            </MudSelect>
        }
    }
    <MudText Typo="Typo.body2" Class="mud-table-pagination-caption">
        @Info
    </MudText>
    <div class="mud-table-pagination-actions">
        <MudIconButton Class="mud-flip-x-rtl" Icon="@Icons.Material.Filled.FirstPage" Disabled="@BackButtonsDisabled" @onclick="OnFirstPageRequested" />
        <MudIconButton Class="mud-flip-x-rtl" Icon="@Icons.Material.Filled.NavigateBefore"
            @onclick=DecreasePageAsync
            Disabled="@BackButtonsDisabled"/>
        <MudIconButton Class="mud-flip-x-rtl" Icon="@Icons.Material.Filled.NavigateNext" Disabled="@ForwardButtonsDisabled"
            @onclick=IncrementPageAsync />
        <MudIconButton Class="mud-flip-x-rtl" Icon="@Icons.Material.Filled.LastPage" Disabled="@ForwardButtonsDisabled"
            @onclick=GoToLastPageAsync />
    </div>
</MudToolBar>
